{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Aura",
  "scopeName": "source.aura",
  "fileTypes": [
    "aura"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#ui-elements"
    },
    {
      "include": "#actions"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#themes"
    },
    {
      "include": "#modifiers"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.aura",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.aura",
          "match": "\\b(Create|Use|When|And|Put|Ask|Go|then|Make|Change|Update|Set|Focus|Disable|Enable|Check|Get|Save|Load|Clear|Copy|Show|Hide|Display|Fade|Slide|Bounce|Increase|Decrease|Wait|Toggle|Scroll|Open)\\b"
        }
      ]
    },
    "ui-elements": {
      "patterns": [
        {
          "name": "entity.name.tag.ui.aura",
          "match": "\\b(button|heading|paragraph|card|input|form|div|section|container|image|img)\\b"
        }
      ]
    },
    "actions": {
      "patterns": [
        {
          "name": "keyword.control.action.aura",
          "match": "\\b(clicked|display|alert|refresh|show|hide|hover|submit|clear|focus|disable|enable|check|get|save|load|copy|fade|slide|bounce|increase|decrease|wait|toggle|scroll|open|change|update|set|make)\\b"
        },
        {
          "name": "support.function.aura",
          "match": "\\b(the\\s+page|the\\s+middle|the\\s+center|in\\s+the|with\\s+the|for\\s+the|from)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.aura",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.aura",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.aura",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.aura",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "themes": {
      "patterns": [
        {
          "name": "support.constant.aura",
          "match": "\\b(dark|light|default)\\s+theme\\b"
        }
      ]
    },
    "modifiers": {
      "patterns": [
        {
          "name": "keyword.control.modifier.aura",
          "match": "\\b(And)\\s+(refresh|display|alert|show|hide)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.property.aura",
          "match": "\\bThe\\s+\\w+'s\\s+\\w+\\s+is\\b"
        }
      ]
    }
  }
}
